<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_head',{title: 'Doctor List'}) %>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
              <a class="navbar-brand" href="/doctor">Home</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                  <a class="nav-link" href="/doctor">Home</a>
                  <a class="nav-link active" href="/patient/showdoctors">Doctor List</a>
                  <a class="nav-link" href="/logout">Logout</a>
                </div>
              </div>
            </div>
        </nav>
        <h1 style="text-align: center;">List Patients</h1>
        <div class="container" style="margin-top: 50px;">
            <form method="get" action="/patient/showdoctors">
                <select name="category">
                  <option selected disabled>Select Doctor</option>
                    <option value="1">Umum</option>
                    <option value="2">Kandungan</option>
                    <option value="3">Penyakit Dalam</option>
                </select>
                <input type="submit" value="Filter">
            </form>
            <br>
            <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Gender</th>
                    <!-- <th scope="col">Clinic</th> -->
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% doctors.forEach((el,i) => { %>    
                        <tr>
                          <th scope="row"><%= i+1 %></th>
                          <td><%= el.name %></td>
                          <td><%= el.age %></td>
                          <td><%= el.gender %></td>
                          
                          <td><img src="<%= el.image %>" width="300" height="200"></td>
                          <td><a href="/patient/<%= el.id %>/consultation" role="button" class="btn btn-warning">Konsultasi</a></td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
              
        </div>
    </div>
</body>
</html>