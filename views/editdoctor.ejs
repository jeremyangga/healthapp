<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_head',{title: 'Edit Doctor'}) %>
</head>
<body>
    <div class="container-fluid">
        <div class="container" style="margin-top: 50px;">
            <center>
                <h1>Edit Doctor</h1>
                <% if (error) { %>
                    <p style="color: red;"><%= error %></p>
                <% } %>
                <form method="post" action="/doctor/<%= id %>/edit">
                    <div class="form-group">
                        <label>Name</label>
                        <br>
                        <input type="text" class="form-control" name="name" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label>Image URL</label>
                        <br>
                        <input type="text" class="form-control" name="image" placeholder="Enter image url">
                    </div>
                    <div class="form-group">
                        <label>Education</label>
                        <br>
                        <select name="education" class="form-control">
                            <option value="S1">S1</option>
                            <option value="S2">S2</option>
                            <option value="S3">S3</option>
                        </select>
                    </div> 
                    <div class="form-group">
                        <label>Specialist</label>
                        <br>
                        <select name="specialist" class="form-control">
                            <% data.forEach(el => { %>
                                <option value="<%= el.id %>"><%= el.name %></option>
                            <% }) %>
                        </select>
                    </div> 
                    <div class="form-group">
                        <label>Weight</label>
                        <br>
                        <input type="number" class="form-control" name="weight" placeholder="Enter weight">
                    </div>
                    <div class="form-group">
                        <label>Height</label>
                        <br>
                        <input type="number" class="form-control" name="height" placeholder="Enter height">
                    </div>
                    <div class="form-group">
                        <label>Date Of Birth</label>
                        <br>
                        <input type="date" class="form-control" name="DoB">
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <br>
                        <select name="gender" class="form-control">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                    <br>
                    <input type="submit" class="btn btn-success" value="Save Data">
                </form>
            </center>
        </div>
    </div>
</body>
</html>